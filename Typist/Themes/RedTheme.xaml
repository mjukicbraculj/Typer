<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style  x:Key="buttonStyle">
        <Setter Property="Control.Background" Value="DarkRed"/>
        <Setter Property="Control.Foreground" Value="White"/>
    </Style>
    <SolidColorBrush x:Key="childButtonBackground" Color="LightCoral"/>
    <SolidColorBrush x:Key="appBackground" Color="LightYellow"></SolidColorBrush>
    <SolidColorBrush x:Key="appBorder" Color="DarkRed"></SolidColorBrush>
    <Style x:Key="headingStyle" TargetType="TextBlock">
        <Setter Property="Background" Value="DarkRed"/>
        <Setter Property="Foreground" Value="LightYellow"/>
    </Style>
</ResourceDictionary> 